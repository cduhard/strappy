<div>
  
    <h2>Forgot Password</h2>

  <h4>Fill out the form below and instructions to reset your password will be emailed to you:</h4>
  <br />

  <% form_tag password_resets_path do %>    
    <fieldset>
      <div> 
        <label class="required">Email:</label>
        <%= text_field_tag "email" %> <%= content_tag :span, h(@errors), :class => "error" %>
      </div>
    </fieldset>
    <div class="formactions">  
      <%= submit_tag "Reset my password" %>
    </div>
  <% end %>
</div>